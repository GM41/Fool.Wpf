<Window x:Class="Fool.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fool.Wpf"
        Loaded="Window_Loaded"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="_grid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Background="#2f5cb6"/>
        <Border Grid.Column ="1" Background="#1f3d7a"/>
        <Button Content="Take 1 card" Grid.Column="1" Height="30" Width="70" Margin="65,36,65,223" Click="OneCard"/>
        <Button Content="Pass turn" Grid.Column="1" Height="30" Width="70" Margin="65,85,65,174" Click="PassTurn"/>
        <Button Content="Deal 4 cards" Grid.Column="1" Height="30" Width="70" Margin="65,217,65,42" Click="StartGame"/>
        <Border Grid.Row="1" Grid.ColumnSpan="2" Background="#151"/>
        <ScrollViewer Name="_handArea" Grid.Row="1" Grid.ColumnSpan="2" 
                      HorizontalScrollBarVisibility="Visible"  VerticalScrollBarVisibility="Disabled">
        </ScrollViewer>
    </Grid>
</Window>
